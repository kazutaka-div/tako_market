= form_for(@item) do |f|
  .field.p-3.text-info.w-50
    = f.label :name
    %br/
    = f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control"
  .field.p-3.text-info.w-50
    = f.label :price
    %br/
    = f.text_field :price, autofocus: true, autocomplete: "price", class: "form-control"
  .field.p-3.text-info.w-50
    = f.label :prefecture
    %br/
    = f.collection_select :prefecture_id, Prefecture.all, :id, :name, {include_blank: "---", selected: 3}, class: "form-control"
  .field.p-3.text-info.w-50
    = f.label :status
    %br/
    = f.text_field :status, autofocus: true, autocomplete: "status", class: "form-control"
  .field.p-3.text-info.w-50
    = f.label :images, "IMAGE-LABEL",class: "touch-box bg-info"
    = f.fields_for :images do |image|
      = image.file_field :src, id: "item_images"
  - if @item.name == nil
    = f.submit "submit", class: "form-control w-50 text-info"
  - else
    = f.submit "edit", class: "form-control w-50 text-danger"