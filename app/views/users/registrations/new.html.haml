%h2.bg-info.p-3 Sign up
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = render "users/shared/error_messages", resourceOrUser: @user
  .field.p-3.text-info.w-50
    = f.label :nickname
    %br/
    = f.text_field :nickname, autofocus: true, autocomplete: "nickname", class: "form-control"
  .field.p-3.text-info.w-50
    = f.label :email
    %br/
    = f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control"
  .field.p-3.text-info.w-50
    = f.label :password
    - if @minimum_password_length
      %em
        (#{@minimum_password_length} characters minimum)
    %br/
    = f.password_field :password, autocomplete: "new-password", class:"form-control"
  .field.p-3.text-info.w-50
    = f.label :password_confirmation
    %br/
    = f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control"
  .name-kanji
    .field.p-3.text-info.w-25
      = f.label :family_name_kanji
      %br/
      = f.text_field :family_name_kanji, autofocus: true, autocomplete: "nickname", class: "form-control"
    .field.p-3.text-info.w-25
      = f.label :first_name_kanji
      %br/
      = f.text_field :first_name_kanji, autofocus: true, autocomplete: "nickname", class: "form-control"
  .name-kana
    .field.p-3.text-info.w-25
      = f.label :family_name_kana
      %br/
      = f.text_field :family_name_kana, autofocus: true, autocomplete: "nickname", class: "form-control"
    .field.p-3.text-info.w-25
      = f.label :first_name_kana
      %br/
      = f.text_field :first_name_kana, autofocus: true, autocomplete: "nickname", class: "form-control"
  .birthday
    .field.p-3.text-info.w-50
      = f.label :birthday, for: "user_birthday_1i"
      %br/
      = f.date_select :birthday, autofocus: true, autocomplete: "birthday", class: "form-control w-50"
  .actions.p-3.text-info.w-50
    = f.submit "Next", class: "form-control"

= render "users/shared/links"
