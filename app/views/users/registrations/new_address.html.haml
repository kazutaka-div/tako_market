%h2.bg-info.p-3 Sign up
= form_for(@address, url: address_path) do |f|
  = render "users/shared/error_messages", resourceOrUser: @user
  .field.p-3.text-info.w-50
    = f.label :postal_code
    %br/
    = f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", class: "form-control"
  .field.p-3.text-info.w-50
    = f.label :address
    %br/
    = f.text_field :address, autofocus: true, autocomplete: "address", class: "form-control"
  
  = f.submit "submit", class: "form-control w-50"